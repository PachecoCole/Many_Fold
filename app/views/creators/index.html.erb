<h1>Creators</h1>

<div class="row row-cols-2">
  <div class="col-9">
    <div class="row  row-cols-1 row-cols-md-2 row-cols-lg-3 mb-3">
        <%= render @creators %>
    </div>
    <% if current_user.pagination_settings["creators"] %>
      <%= paginate @creators %>
    <% end %>
  </div>
  <div class="col-3">

    <%= card :secondary, "Actions" do %>
      <%= link_to "New Creator", new_creator_path, class: "btn btn-primary" %>
      <%= link_to "View unassigned", creator_path(id: 0), class: "btn btn-default" %>
    <% end %>

  </div>
</div>
