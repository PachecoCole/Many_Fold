<h2><%= t(".change_your_password") %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <%= password_input_row f, :password, autocomplete: "new-password", autofocus: true %>
  <%= password_input_row f, :password_confirmation, autocomplete: "new-password" %>
  <%= f.submit t(".change_my_password"), class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
