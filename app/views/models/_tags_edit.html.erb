<div class="row mb-3 input-group">
  <label for="tags" class="col-sm-2 col-form-label"><%= label %></label>
    <div class="form-control col-auto tag-container">
      <%= form.collection_select :tag_list, tags,
        :name, :name, {}, {
          multiple: true,
          class: "form-select",
          name: name ? "#{name}[]" : nil,
          data: {selectize: "true"}
        }
      %>
  </div>
</div>
