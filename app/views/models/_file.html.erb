<div class="col mb-4">
  <div class="card preview-card <%= (file === @model.preview_file) ? "border-primary" : "" %>">
    <% if file.is_image? %>
      <%= content_tag :div, nil, class: "card-img-top card-img-top-background", style: "background-image: url(#{library_model_model_file_path(@model.library, @model, file, format: file.extension)})" %>
      <%= image_tag library_model_model_file_path(@model.library, @model, file, format: file.extension), class: "card-img-top image-preview", alt: file.name %>
    <% elsif renderable?(file.extension) %>
      <div class="card-img-top">
        <%= render partial: "object_preview", locals: {library: @model.library, model: @model, file: file} %>
      </div>
    <% end %>
    <div class="card-body">
      <div class="card-title">
        <%= file.name %>
      </div>
      <% if file.caption %>
        <p class="card-text"><%= sanitize file.caption %></p>
      <% end %>
      <div class="row">
        <div class="col">
          <%= link_to t(".open"), library_model_model_file_path(@model.library, @model, file), {class: "btn btn-primary"} %>
          <%= link_to icon("cloud-download", t("general.download")), library_model_model_file_path(@model.library, @model, file, file.extension.to_sym), {class: "btn btn-secondary"} %>
          <% if policy(@model).edit? %>
            <%= form_with model: [@model.library, @model], class: "d-inline" do |form| %>
              <%= form.hidden_field :preview_file_id, value: file.id %>
              <%= form.button icon("image", t(".set_as_preview")), data_bs_toggle: "button", class: "btn #{(file == @model.preview_file) ? "btn-outline-success active disabled" : "btn-outline-secondary"}" %>
            <% end %>
          <% end %>
        </div>
        <div class="col col-auto">
          <% if file.presupported || file.presupported_version %>
            <%= icon "bar-chart-line-fill", ModelFile.human_attribute_name(:presupported) %>
          <% end %>
          <%= problem_icon(file.problems) %>
        </div>
      </div>
    </div>
  </div>
</div>
