<% unless tags.empty? %>
  <%= card :secondary, "Tags" do %>
    <% tags.each do |tag| %>
      <% if (tag == selected) %>
        <%=link_to tag.name, @library, {class: "badge rounded-pill bg-success"} %>
      <% else %>
        <%=link_to tag.name, [@library, tag: tag.name], {class: "badge rounded-pill bg-secondary"} %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
